<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Page2"
        android:background="@color/colorAccent">

    <RelativeLayout
            android:id="@+id/rel_anything"
            android:layout_width="280dp"
            android:layout_height="186dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_alignParentLeft="true"
            android:layout_marginRight="36dp" android:layout_marginLeft="35dp">


    </RelativeLayout>

    <EditText
            android:id="@+id/nome"
            android:layout_width="228dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:autofillHints="pergunta_nome"
            android:ems="10"
            android:hint="nome"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/rel_anything"
            app:layout_constraintEnd_toEndOf="@+id/rel_anything"
            app:layout_constraintHorizontal_bias="0.519"
            app:layout_constraintStart_toStartOf="@+id/rel_anything"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintVertical_bias="0.333"
            tools:ignore="UnusedAttribute" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:id="@+id/textView19"
            android:layout_width="160dp"
            android:layout_height="119dp"
            android:layout_marginBottom="140dp"
            android:shadowColor="#707070"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/pergunta_nome"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/bluetooth_conectar4"
            tools:layout_editor_absoluteX="134dp"/>

    <ImageButton
            android:id="@+id/botao4"
            android:layout_width="255dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/conectar"
            android:onClick="Click"
            app:layout_constraintBottom_toBottomOf="@+id/rel_anything"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rel_anything"
            app:srcCompat="@drawable/botao"/>

    <TextView
            android:id="@+id/bluetooth_conectar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="#f1f1f1"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/botao4"
            app:layout_constraintEnd_toEndOf="@+id/botao4"
            app:layout_constraintStart_toStartOf="@+id/botao4"
            app:layout_constraintTop_toTopOf="@+id/botao4" />

    <TextView
            android:id="@+id/textView18"
            android:layout_width="195dp"
            android:layout_height="29dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="8dp"
            android:text="@string/pergunta_nome_dois"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/bluetooth_conectar4"
            app:layout_constraintEnd_toEndOf="@+id/rel_anything"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/rel_anything"
            app:layout_constraintTop_toTopOf="@+id/rel_anything"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>