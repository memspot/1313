<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Configuracoes">

    <TextView
            android:text="Configurações"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
    />
    <TextView
            android:text="Editar perfil"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView8"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <TextView
            android:text="Ativar notificações"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView11"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
