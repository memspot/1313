            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <ImageView
            android:layout_width="61dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_settings_black_24dp"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="TODO"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.076"/>
