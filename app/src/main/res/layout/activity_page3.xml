<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3">
    <ScrollView
            android:layout_width="448dp"
            android:layout_height="743dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:id="@+id/scrollView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.326">
        <LinearLayout android:layout_height="wrap_content"
                      android:orientation="vertical"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent">
            <TextView
                    android:text="César Henrique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.537"
                    android:textSize="36sp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="AÇÚCAR | 3 SEMANAS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
            <Button
                    android:layout_width="386dp"
                    android:layout_height="18dp"
                    android:id="@+id/button5"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/scrollView2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
            <Button
                    android:layout_width="384dp"
                    android:layout_height="263dp"
                    android:id="@+id/button3"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/button3"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                    style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                    android:background="@color/colorAccent" android:text="Foto da planta"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="36dp">
                <Button
                        android:text="Button"
                        android:layout_width="25dp"
                        android:layout_height="30dp" android:id="@+id/button9" android:layout_weight="1"
                        android:visibility="invisible"/>

                <ProgressBar
                        android:progressDrawable="@drawable/progress_bar_azul"
                        style="?android:attr/progressBarStyleHorizontal"

                        android:id="@+id/mf_progress_bar_azul"

                        android:layout_gravity="center_horizontal"
                        android:layout_height="30dp" android:layout_width="181dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.529" android:layout_marginBottom="540dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        app:layout_constraintVertical_bias="0.991" android:max="100" android:progress="65"/>
                <Button
                        android:text="Button"
                        android:layout_width="20dp"
                        android:layout_height="27dp" android:id="@+id/button8" android:layout_weight="1"
                        android:visibility="invisible"/>

                <ProgressBar
                        android:progressDrawable="@drawable/progress_bar_amarelo"
                        style="?android:attr/progressBarStyleHorizontal"

                        android:id="@+id/mf_progress_bar-amarelo"

                        android:layout_gravity="center_horizontal"
                        android:layout_height="31dp" android:layout_width="186dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.529" android:layout_marginBottom="540dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        app:layout_constraintVertical_bias="0.991" android:max="100" android:progress="15"/>
                <Button
                        android:text="Button"
                        android:layout_width="50dp"
                        android:layout_height="27dp" android:id="@+id/button15" android:layout_weight="1"
                        android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:text="Button"
                        android:layout_width="20dp"
                        android:layout_height="30dp" android:id="@+id/button11" android:layout_weight="1"
                        android:visibility="invisible"/>
                <TextView
                        android:text="Índice de umdidade"
                        android:id="@+id/textView19" android:layout_weight="1"
                        android:layout_width="107dp" android:layout_height="25dp"/>
                <Button
                        android:text="Button"
                        android:layout_width="54dp"
                        android:layout_height="30dp" android:id="@+id/button7" android:layout_weight="1"
                        android:visibility="invisible"/>
                <TextView
                        android:text="Índice de raios UV"
                        android:id="@+id/textView18" android:layout_weight="1" android:layout_height="25dp"
                        android:layout_width="107dp"/>
                <Button
                        android:text="Button"
                        android:layout_width="5dp"
                        android:layout_height="30dp" android:id="@+id/button12" android:layout_weight="1"
                        android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/dicasButton"
                        android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/dicasButton"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                        android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                        style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                        android:background="@drawable/ic_new_releases_black_24dp"
                        android:onClick="ClickDicas"/>
                <TextView
                        android:text="Dicas"
                        android:layout_width="255dp"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="138dp">
                <Button
                        android:layout_width="61dp"
                        android:layout_height="63dp"
                        android:id="@+id/configButton"
                        android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/dicasButton"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                        android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                        style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                        android:background="@drawable/ic_settings_black_24dp"
                        android:onClick="ClickConfig"/>
                <TextView
                        android:text="Configurações"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
