<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:id="@+id/scrollView2" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:text="César Henrique"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.537"
                    android:textSize="36sp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="AÇÚCAR | 3 SEMANAS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
            <Button
                    android:layout_width="386dp"
                    android:layout_height="18dp"
                    android:id="@+id/button5"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/scrollView2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
            <Button
                    android:layout_width="384dp"
                    android:layout_height="263dp"
                    android:id="@+id/button3"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/button3"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                    style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                    android:background="@color/colorAccent" android:text="Foto da planta"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="152dp">
                <Button
                        android:layout_width="172dp"
                        android:layout_height="125dp"
                        android:id="@+id/button6"
                        android:onClick="ClickUmidade"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_bias="0.739"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/button6"
                        app:layout_constraintVertical_bias="0.32" style="@style/Widget.AppCompat.Button.Colored"
                        android:textColor="@android:color/black"
                        android:background="@drawable/folhas"
                        android:text="Índice de umidade"/>
                <Button
                        android:layout_width="191dp"
                        android:layout_height="125dp"
                        android:id="@+id/button4" android:onClick="ClickUV"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.739"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/button4"
                        app:layout_constraintVertical_bias="0.32" style="@style/Widget.AppCompat.Button.Colored"
                        android:textColor="@android:color/black" android:background="@drawable/folhas2"
                        android:text="Índice de raios UV"/>
                <Button
                        android:text="Button"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content" tools:layout_editor_absoluteY="645dp"
                        tools:layout_editor_absoluteX="16dp" android:id="@+id/button7"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/dicasButton"
                        android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/dicasButton"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                        android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                        style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                        android:background="@drawable/ic_new_releases_black_24dp"
                        android:onClick="ClickDicas"/>
                <TextView
                        android:text="Dicas"
                        android:layout_width="255dp"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="138dp">
                <Button
                        android:layout_width="61dp"
                        android:layout_height="63dp"
                        android:id="@+id/configButton"
                        android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="@+id/dicasButton"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
                        android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        app:layout_constraintHorizontal_bias="0.629" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
                        style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
                        android:background="@drawable/ic_settings_black_24dp"
                        android:onClick="ClickConfig"/>
                <TextView
                        android:text="Configurações"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
