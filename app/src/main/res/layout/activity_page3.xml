<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3">

    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="46dp" app:srcCompat="@drawable/drop"
            android:id="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.188" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar_azul"
            android:layout_marginRight="8dp"/>

    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_azul"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar_azul"

            android:layout_gravity="center_horizontal"
            android:layout_height="27dp" android:layout_width="119dp"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            android:max="100" android:progress="65"
            android:layout_marginBottom="264dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mf_progress_bar-amarelo" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp" app:srcCompat="@drawable/sunny"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar-amarelo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.188"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintStart_toEndOf="@+id/mf_progress_bar_azul" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_amarelo"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar-amarelo"

            android:layout_gravity="center_horizontal"
            android:layout_height="27dp" android:layout_width="119dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            android:max="100" android:progress="15" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.207"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Índice de umidade"
            android:id="@+id/textView19" android:layout_weight="1"
            android:layout_width="117dp" android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar_azul" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
    />
    <TextView
            android:text="Índice de raios UV"
            android:id="@+id/textView18" android:layout_weight="1" android:layout_height="34dp"
            android:layout_width="118dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar-amarelo"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp"
    />

    <Button
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:id="@+id/dicasButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
            android:background="@drawable/ic_new_releases_black_24dp"
            android:onClick="ClickDicas"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="92dp"
            app:layout_constraintHorizontal_bias="0.275" app:layout_constraintVertical_bias="0.84000003"/>
    <TextView
            android:text="Dicas"
            android:layout_width="36dp"
            android:layout_height="21dp" android:id="@+id/textView6" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/dicasButton"
            android:layout_marginStart="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginTop="8dp"
    />

    <Button
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:id="@+id/configButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
            android:background="@drawable/ic_settings_black_24dp"
            android:onClick="ClickConfig"
            android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="72dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView7"
    />
    <TextView
            android:text="Configurações"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/configButton" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="64dp"
            android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="648dp"
            android:layout_height="356dp" app:srcCompat="@drawable/fundo2"
            android:id="@+id/imageView4"
            android:layout_marginBottom="376dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/recebeNome"
            android:layout_width="273dp"
            android:layout_height="106dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="70dp"
            android:shadowColor="#707070"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/jogador"
            android:textColor="@android:color/white"
            android:textSize="55sp"
            app:layout_constraintBottom_toBottomOf="@+id/botao4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/botao4"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="40dp"/>
    <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@android:color/darker_gray"
            android:id="@+id/oi"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="@android:color/holo_green_dark"
            app:allow_random_color="false"
            app:siShape="@drawable/ledi" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.139" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/recebeNome" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.928"/>
    <ImageView
            android:layout_width="212dp"
            android:layout_height="234dp" app:srcCompat="@drawable/suculenta"
            android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.936" app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.497"/>


</android.support.constraint.ConstraintLayout>
