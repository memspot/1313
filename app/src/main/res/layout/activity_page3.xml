<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3">

    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:text="César Henrique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.142"
            android:textSize="36sp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="AÇÚCAR | 3 SEMANAS"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.133"
    />

    <ImageView
            android:layout_width="44dp"
            android:layout_height="49dp" app:srcCompat="@drawable/drop"
            android:id="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar_azul"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.091" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>

    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_azul"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar_azul"

            android:layout_gravity="center_horizontal"
            android:layout_height="27dp" android:layout_width="121dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            android:max="100" android:progress="65"
            android:layout_marginBottom="264dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mf_progress_bar-amarelo" app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="46dp"
            android:layout_height="52dp" app:srcCompat="@drawable/sunny"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar-amarelo" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.092"
    />
    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_amarelo"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar-amarelo"

            android:layout_gravity="center_horizontal"
            android:layout_height="26dp" android:layout_width="118dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.945"
            android:max="100" android:progress="15" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.12"/>
    <TextView
            android:text="Índice de umidade"
            android:id="@+id/textView19" android:layout_weight="1"
            android:layout_width="131dp" android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar_azul" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView18" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.421"/>
    <TextView
            android:text="Índice de raios UV"
            android:id="@+id/textView18" android:layout_weight="1" android:layout_height="34dp"
            android:layout_width="118dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar-amarelo"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"/>

    <Button
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:id="@+id/dicasButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
            android:background="@drawable/ic_new_releases_black_24dp"
            android:onClick="ClickDicas"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="92dp"
            app:layout_constraintHorizontal_bias="0.283" app:layout_constraintVertical_bias="0.84000003"/>
    <TextView
            android:text="Dicas"
            android:layout_width="43dp"
            android:layout_height="21dp" android:id="@+id/textView6" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/dicasButton"
            android:layout_marginStart="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp"/>

    <Button
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:id="@+id/configButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
            android:background="@drawable/ic_settings_black_24dp"
            android:onClick="ClickConfig"
            android:layout_marginEnd="92dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="92dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <TextView
            android:text="Configurações"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/configButton" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="80dp"
            android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="320dp"
            android:layout_height="207dp" app:srcCompat="@drawable/fundo2"
            android:id="@+id/imageView4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.27"/>

    <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@android:color/darker_gray"
            android:id="@+id/oi"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="@android:color/holo_green_dark"
            app:allow_random_color="false"
            app:siShape="@drawable/ledi" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.315"/>

</android.support.constraint.ConstraintLayout>
